{
  "name": "sonniesedge",
  "version": "1.0.0",
  "private": true,
  "description": "sonniesedge",
  "scripts": {
    "clean": "rm -f themes/sonniesedge/static/*.js themes/sonniesedge/static/*.js.map themes/sonniesedge/static/*.css themes/sonniesedge/static/*.css.map",
    "babel:build": "babel themes/sonniesedge/static-src/js --out-file themes/sonniesedge/static/main.js --source-maps",
    "babel:watch": "babel themes/sonniesedge/static-src/js --watch --out-file themes/sonniesedge/static/main.js --source-maps",
    "sass:watch": "onchange 'themes/sonniesedge/static-src/scss/**/*.scss' -- npm run sass:build",
    "sass:build": "node-sass --include-path node_modules/loomcss/assets themes/sonniesedge/static-src/scss/main.scss themes/sonniesedge/static/main.css",
    "build:assets": "npm run clean && npm run sass:build && npm run babel:build",
    "build": "npm run build:assets && hugo",
    "start": "npm run clean && npm run sass:build && npm run babel:build && parallelshell 'npm run sass:watch' 'npm run babel:watch' 'hugo serve'"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-preset-babili": "0.0.9",
    "node-sass": "^4.1.1",
    "onchange": "^3.2.1",
    "parallelshell": "^2.0.0",
    "loom": "git+https://github.com/sonniesedge/loom.git",
    "font-face-observer": "1.0.0"
  }
}
