{% extends "default.njk" %}
{% block list %}
    <ul class="comp-contentlist">
    {% for bookmark in bookmarks %}
        <li class="comp-contentlist__item">
            <a href="{{ bookmark.path }}" class="comp-contentlist__link">
                <p class="comp-contentlist__title">{{ bookmark.title }}</p>
                <p class="comp-contentlist__date">{{ bookmark.date }}</p>
            </a>
        </li>
    {% endfor %}
    </ul>
{% endblock %}