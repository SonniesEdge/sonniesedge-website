{% extends "default.njk" %}

{% block twittercard %}
  <meta name="twitter:card" content="summary">
  <meta name="twitter:site" content="@sonniesedge">
  <meta name="twitter:title" content="{{ title }} | sonniesedge">
  <meta name="twitter:url" content="http://sonniesedge.co.uk{{ path }}">
  <meta name="twitter:description" content="{{ strapline }}">
  <meta name="twitter:image:src" content="http://sonniesedge.co.uk/images/pages/photo.jpg">
{% endblock %}
  
{% block content %}
  <article class="h-entry">
      <header class="comp-postheader">
        <h1 class="p-name comp-postheader__title"><a href="{{ path }}" class="u-url comp-postheader__titlelink">{% if realtitle %}{{ realtitle }}{% else %}{{ title }}{% endif %}</a></h1>
        <p class="comp-postheader__date"><time class="dt-published">{{ date }}</time></p>
        <p class="comp-postheader__strapline p-summary">{{ strapline }}</p>
      </header>

      <div class="e-content">
        {{ contents | safe }}
      </div>
  </article>
{% endblock %}